<div class="container"> 

{{ form_start(form) }}
    <div class="form-group">{{ form_row(form.name, {'attr':{'class':'form-control'}}) }}</div>
    <div class="form-group">{{ form_row(form.description, {'attr':{'class':'form-control'}}) }}</div>
    <div class="form-group">{{ form_row(form.price, {'attr':{'class':'form-control'}}) }}</div>
    <div class="form-group">{{ form_row(form.category, {'attr':{'class':'form-control'}}) }}</div>
    <div class="form-group mt-2">{{ form_row(form.available) }}</div>
    <div class="form-group">{{ form_row(form.image, {'attr':{'class':'form-control'}}) }}</div>
    <button class="btn btn-primary mt-3">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}

</div>