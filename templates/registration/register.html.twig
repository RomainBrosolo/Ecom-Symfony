{% extends 'template.html.twig' %}

{% block PageTitle %}Register{% endblock %}
{% block Chemin %}<a href="{{path('app_register')}}">Register</a>{% endblock %}

{% block body %}
<div class="container">
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
    <div class="form-group">{{ form_row(registrationForm.firstname, {'attr':{'class':'form-control'}}) }}</div>  
    <div class="form-group">{{ form_row(registrationForm.lastname, {'attr':{'class':'form-control'}}) }}</div>
    <div class="form-group">{{ form_row(registrationForm.email, {'attr':{'class':'form-control'}}) }}</div>
    <div class="form-group">{{ form_row(registrationForm.phone, {'attr':{'class':'form-control'}}) }}</div>
    <div class="form-group">{{ form_row(registrationForm.address, {'attr':{'class':'form-control'}}) }}</div>
    <div class="form-group">{{ form_row(registrationForm.password, {'attr':{'class':'form-control'}}) }}</div>
    <div class="form-group">{{ form_row(registrationForm.agreeTerms) }}</div>
        <button type="submit" class="btn btn-primary btn-block"> Create Account  </button>
    </div> <!-- form-group// -->      
    <p class="text-center mb-5">Have an account? <a href="{{ path('app_login')}}">Log In</a> </p>    
    {{ form_end(registrationForm) }}
</div>

{% endblock %}
